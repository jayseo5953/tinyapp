<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">

      <div class="navbar-nav" style="flex-direction: row; flex:1; justify-content: space-between">
        <div style="display: flex">

            <a class="nav-item nav-link" href="/urls">My URLs</a>
            <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
            
        </div>
      </div>
      <div>
          <% if (typeof user !== 'undefined') { %>
            <div style="display: flex">
              <p style="color: white; padding-top: 7px; margin-right:10px">
               Logged in as <strong style="color:blue"><%= user.email %></strong></p>
               <Form method="POST" action = "/logout">
                <button value = "Log" style="border-radius:5px; margin-top: 5px" >Logout</button>
              </Form>
            </div> 
            
            <% } else {%>
              <div style="display:flex">
                <a class="nav-item nav-link" href="/signup" style="color:white"><strong>Register</strong></a>
                <a class="nav-item nav-link" href="/login" style="color:white"><strong>Log In</strong></a>
              </div>
            
            <% }%>

       </div>
    </div>
  </nav>
</header>

